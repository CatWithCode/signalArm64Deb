#!/bin/bash
set -ex

version=$1

node_version=$(curl https://raw.githubusercontent.com/signalapp/Signal-Desktop/${version}/package.json | jq .engines.node | tr -d '"')
if grep -q ${node_version} node.sums; then
    echo "Already up to date"
    exit 0
fi
sed -i "s:ENV NODE_VERSION=.*:ENV NODE_VERSION=v${node_version}:" Dockerfile
wget https://nodejs.org/dist/v${node_version}/node-v${node_version}-linux-arm64.tar.gz
sha256sum node-v${node_version}-linux-arm64.tar.gz > node.sums
sed -i "s:node:/opt/node:" node.sums
